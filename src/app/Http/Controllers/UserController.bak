        if ($request->filled('password_new')) {
            $data['password'] = Hash::make($request->password_new);
        }
        $user->update($data);*/

        return redirect()->route('users')->with('success', 'Updated user successfully.');
    }

    public function getDelete($id)
    {
        $orm = User::findOrFail($id);

        if ($orm->id === auth()->id()) {
            return redirect()->route('users')->with('error', 'Cannot delete your own account.');
        }
        if ($orm->orders()->count() > 0) {
            return redirect()->route('users')->with('error', 'Cannot delete user with existing orders.');
        }
        $orm->delete();

        return redirect()->route('users')->with('success', 'Deleted user successfully.');
    }
}
