        $orm->address = $request->address;
        $orm->avatar = $request->avatar;
        $orm->background = $request->background;
        $orm->jobs = $request->jobs;
        $orm->school = $request->school;
        $orm->company = $request->company;
        $orm->save();

        /*$data = $request->only(['name', 'email', 'username', 'phone', 'id_card', 'roles']);
